<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="烧录设置">

        <ListPreference
            app:defaultValue="115200"
            app:entries="@array/baud_entries"
            app:entryValues="@array/baud_entries"
            app:key="baud_rate"
            app:title="波特率设置"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="md5_check"
            app:summaryOff="@string/md5_summary_off"
            app:summaryOn="@string/md5_summary_on"
            app:title="MD5校验" />

    </PreferenceCategory>

</PreferenceScreen>